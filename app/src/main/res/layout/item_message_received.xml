<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_gravity="start">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <!-- Avatar (hide in private chat) -->
        <ImageView
            android:id="@+id/ivSenderAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_default_profile"
            android:contentDescription="Sender Avatar"
            android:scaleType="centerCrop"
            android:visibility="visible"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="top" />

        <!-- Bubble + content -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/message_bubble_received"
            android:padding="0dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:orientation="horizontal"
                    android:maxWidth="280dp">

                    <LinearLayout
                        android:id="@+id/messageContent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Sender Name (hide in private chat) -->
                        <TextView
                            android:id="@+id/senderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sender Name"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginBottom="1dp"
                            android:visibility="visible" /> <!-- Set to "gone" in private chat -->

                        <TextView
                            android:id="@+id/textMessageBody"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#5A189A"
                            android:textSize="15sp"
                            android:lineSpacingExtra="1dp"
                            android:maxWidth="280dp" />

                        <LinearLayout
                            android:id="@+id/attachmentContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textMessageTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:45"
                        android:textColor="#5A189A"
                        android:textSize="9sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="1dp"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
